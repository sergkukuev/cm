body
    form#authForm(method="POST", action="/auth/login")
        p Response type: 
        input.hidden(name="response_type", value=response_type, readonly)
        p Redirect url:
        input.hidden(name="redirect_uri", value=redirect_uri, readonly)
        p AppId:
        input.hidden(name="app_id", value=app_id, readonly)
        p Login:
        input(name="login", required)
        p Password:
        input(name="password", type="password", required)
        </br> </br>
        input.on-center(text="Login" type="submit")